{% if posts.pagination.pages is not empty %}
    <nav class="container px-4 flex items-center justify-between sm:px-0 mt-10">
        <div class="w-0 flex-1 flex">
            {% if posts.pagination.prev %}
                <a href="{{ posts.pagination.prev.link }}" class="-mt-px pt-4 pr-1 inline-flex items-center text-lg leading-5 font-medium text-indigo-700 hover:text-indigo-700-alt hover:border-indigo-700 focus:outline-none focus:text-gray-700 focus:border-gray-400 transition ease-in-out duration-150">
                    <svg width="10" height="16" viewBox="0 0 10 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M8 15.5L0.5 8L8 0.5L9.33125 1.83125L3.1625 8L9.33125 14.1688L8 15.5Z" fill="#1D1D1D"/>
                    </svg>
                </a>
            {% else %}
                <a href="#" class="-mt-px pt-4 pr-1 inline-flex items-center text-lg leading-5 font-medium text-gray-300 hover:text-gray-700 hover:border-gray-300 focus:outline-none focus:text-gray-700 focus:border-gray-400 transition ease-in-out duration-150">
                    <svg width="10" height="16" viewBox="0 0 10 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M8 15.5L0.5 8L8 0.5L9.33125 1.83125L3.1625 8L9.33125 14.1688L8 15.5Z" fill="#1D1D1D"/>
                    </svg>
                </a>
            {% endif %}
        </div>
        <div class="flex">
            {% for page in posts.pagination.pages %}
                {% if page.link %}
                    <a href="{{ page.link }}" class="-mt-px pt-4 px-4 inline-flex items-center text-lg leading-5 font-medium text-charcoal hover:text-indigo-700-alt hover:border-gray-400 focus:outline-none focus:text-gray-700 focus:border-gray-400 transition ease-in-out duration-150">
                    {{ page.title }}
                    </a>
                {% else %}
                    <a href="{{ page.link }}" class="-mt-px pt-4 px-4 inline-flex items-center text-lg leading-5 font-medium text-blue hover:text-indigo-700-alt hover:border-gray-400 focus:outline-none focus:text-gray-700 focus:border-gray-400 transition ease-in-out duration-150">
                    {{ page.title }}
                    </a>
                {% endif %}
            {% endfor %}
        </div>
        <div class="w-0 flex-1 flex justify-end">
            {% if posts.pagination.next %}
                <a href="{{ posts.pagination.next.link }}" class="-mt-px pt-4 pl-1 inline-flex items-center text-lg leading-5 font-medium text-indigo-700 hover:text-indigo-700-alt hover:border-indigo-700 focus:outline-none focus:text-gray-700 focus:border-gray-400 transition ease-in-out duration-150">
                    <svg width="10" height="16" viewBox="0 0 10 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2 0.499999L9.5 8L2 15.5L0.668751 14.1687L6.8375 8L0.668752 1.83125L2 0.499999Z" fill="#1D1D1D"/>
                    </svg>
                </a>
            {% else %}
                <a href="#" class="-mt-px pt-4 pl-1 inline-flex items-center text-lg leading-5 font-medium text-gray-300 hover:text-gray-700 hover:border-gray-300 focus:outline-none focus:text-gray-700 focus:border-gray-400 transition ease-in-out duration-150">
                    <svg width="10" height="16" viewBox="0 0 10 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2 0.499999L9.5 8L2 15.5L0.668751 14.1687L6.8375 8L0.668752 1.83125L2 0.499999Z" fill="#1D1D1D"/>
                    </svg>
                </a>
            {% endif %}
        </div>
    </nav>
{% endif %}
