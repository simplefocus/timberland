<section
    class=" hero-background-img"
    style="background-image: linear-gradient(0deg, rgba(16, 16, 16, {{ function('wp_is_mobile') ? 0.4 : 0.35 }}), rgba(16, 16, 16, {{ function('wp_is_mobile') ? 0.4 : 0.35 }})), url({{ image.value }})">

    <div
        class="container flex flex-col {{ function('is_front_page') ? 'justify-end md:pb-[140px]' : 'justify-center' }}">
        <div class="flex flex-col text-white gap-8">
            <h1 class="md:text-[4rem] md:pr-24">{{ title }}</h1>
            <p class="font-sans text-xl md:text-2xl font-thin">{{ subtitle }}</p>
            {% if cta.url and cta.title %}
                <div>
                    <a href="{{ cta.url }}" target="{{ cta.target }}"
                       class="btn btn--cta btn-{{ cta_color ? cta_color : 'blue' }} mt-6 md:mt-8">{{ cta.title }}</a>
                </div>
            {% endif %}
        </div>
    </div>

</section>

